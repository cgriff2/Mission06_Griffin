@{
    ViewData["Title"] = "Add a Movie";
}

@model Movie
<h2 class="display-4 text-center">Add a Movie to the Collection</h2>
<br />
<div style="justify-content: center; display: flex">
    <form method="post" >
        <div class="form-group2">
            <input asp-for="MovieId" hidden />
        </div>
        <div class="form-group2">
            <label asp-for="CategoryId">Category: </label>
            <select asp-for="CategoryId">
                <option value="">Select a Category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group2">
            <label asp-for="Title">Title: </label>
            <input asp-for="Title" type="text" />
        </div>
        <div class="form-group2">
            <label asp-for="Year">Year: </label>
            <input asp-for="Year" type="number" />
        </div>
        <div class="form-group2">
            <label asp-for="Director">Director: </label>
            <input asp-for="Director" type="text" />
        </div>
        <div class="form-group2">
            <label asp-for="Rating">Rating: </label>
            <select asp-for="Rating" required>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <div class="form-group2">
            <label asp-for="Edited">Edited: </label>
            <select asp-for="Edited">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
        </div>
        <div class="form-group2">
            <label asp-for="LentTo">Lent To: </label>
            <input asp-for="LentTo" value="" type="text" />
        </div>
        <div class="form-group2">
            <label asp-for="CopiedToPlex">Copied to Plex? </label>
            <select asp-for="CopiedToPlex">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
        </div>
        <div class="form-group2">
            <label asp-for="Notes">Notes: </label>
            <input asp-for="Notes" type="text" maxlength="25" />
        </div>

        <button type="submit">Add Movie</button>
    </form>
</div>
